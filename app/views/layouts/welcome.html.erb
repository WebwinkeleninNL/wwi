    <div class="language">
      <%= form_tag locale_path do %>
        <%=
          select_tag :locale,
            options_for_select(
              [
                ['Nederland', 'nl'],
                ['Deutsch', 'de'],
                ['English', 'en'],
              ],
              selected: I18n.locale
            ),
            class: 'styled',
            onchange: "this.form.submit()"
        %>
      <% end %>
    </div>

    <ul class="topmenu">
      <li><%= image_tag "frontend/user.png", class: "cart", alt: "user" %></li>
      <li>
      <% if current_user.nil? %>
        <a href="/login">Klant Login</a>
      <% else %>
        <%= link_to current_user.full_name, customer_profile_path %>
        <%= link_to 'loguot', logout_path, method: :delete %>
      <% end %>
      </li>
    </ul>
  </div>
</div>

